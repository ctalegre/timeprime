{
  "name": "timeprime",
  "version": "0.1.0",
  "author": "Carlos Torregrosa",
  "description": "AplicaciÃ³n para cronometrar tiempos",
  "private": true,
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "pre_test": "react-scripts test --env=jsdom",
    "test": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && mocha\"",
    "eject": "react-scripts eject",
    "electron-start": "electron .",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "build --em.main=build/main.js",
    "preelectron-pack": "yarn build"
  },
  "dependencies": {
    "easytimer.js": "^2.3.0",
    "electron-is-dev": "^0.3.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-scripts": "^3.1.2"
  },
  "devDependencies": {
    "concurrently": "^3.5.0",
    "electron": "^15.5.5",
    "electron-builder": "^19.26.3",
    "wait-on": "^2.0.2",
    "mocha": "^5.0.5",
    "spectron": "^3.8.0"
  },
  "build": {
    "appId": "com.timeprime",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
